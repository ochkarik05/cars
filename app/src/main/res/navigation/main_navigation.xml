<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/main_navigation.xml"
            app:startDestination="@id/filterFragment">


    <fragment
            android:id="@+id/filterFragment"
            android:name="com.shineapp.cars.screen.filter.FilterFragment"
            tools:layout="@layout/fragment_filter">

        <action
                android:id="@+id/actionShowList"
                app:destination="@id/pagedListFragment"
                app:enterAnim="@anim/nav_default_enter_anim"
                app:exitAnim="@anim/nav_default_exit_anim"
                app:popEnterAnim="@anim/nav_default_pop_enter_anim"
                app:popExitAnim="@anim/nav_default_pop_exit_anim"/>

    </fragment>

    <fragment
        android:id="@+id/pagedListFragment"
        tools:layout="@layout/fragment_paged_list"
        android:name="com.shineapp.cars.screen.list.PagedListFragment"/>


</navigation>